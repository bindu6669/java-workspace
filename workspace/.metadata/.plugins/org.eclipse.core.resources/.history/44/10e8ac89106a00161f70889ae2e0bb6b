
public class inverttriangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num=5;
		
		while (num>0){
			  for (int j=0;j<=num;j++)
			  {
				  
				  System.out.println( " '+num+' ");  
				  
			  }
			  System.out.println( "\n");
			  num--;
			 }
			
	}

}
